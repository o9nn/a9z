# Agent Zero daedalOS Integration Configuration

# API Configuration
AGENT_ZERO_API_URL=http://localhost:8000
AGENT_ZERO_WS_URL=ws://localhost:8000
AGENT_ZERO_PORT=8000

# daedalOS Configuration
DAEDALOS_PORT=3000
DAEDALOS_ENV=production

# Agent Zero Home Directory
AGENT_ZERO_HOME=/home/agent-zero

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=true

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Performance
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30
WEBSOCKET_TIMEOUT=300

# Storage
STORAGE_BACKEND=filesystem
STORAGE_PATH=/home/agent-zero

# Features
ENABLE_MEMORY_PERSISTENCE=true
ENABLE_KNOWLEDGE_BASE=true
ENABLE_PROMPT_MANAGEMENT=true
ENABLE_FILE_OPERATIONS=true

# Development
DEBUG=false
RELOAD=false
